<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>
     <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    tools:context=".Add_note_frag">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:background="@drawable/search_background"
        android:padding="10dp"
        android:id="@+id/add_frag_back" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_save_24"
        android:background="@drawable/search_background"
        android:padding="10dp"
        android:id="@+id/add_frag_save"

        />
         <Spinner
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/color_Spinner"
             app:layout_constraintEnd_toStartOf="@+id/add_frag_save"
             android:layout_marginTop="40dp"
             app:layout_constraintTop_toTopOf="parent"
             android:layout_marginEnd="15dp"
             android:background="@drawable/spinner_icon"

             />
    <EditText
        android:id="@+id/add_frag_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_frag_back"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textColor="#929292"
        android:hint="Title"
        android:textSize="26sp"
        android:textColorHint="#929292"
        android:padding="8dp"
        android:background="@color/background_black" />

    <EditText
        android:id="@+id/add_frag_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_frag_title"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textColor="#929292"
        android:hint="Type Somethings here..."
        android:textSize="24sp"
        android:textColorHint="#929292"
        android:padding="8dp"
        android:background="@color/background_black" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>